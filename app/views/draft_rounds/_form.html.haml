= form_for @draft_round do |f|
  - if @draft_round.errors.any?
    #error_explanation
      %h2= "#{pluralize(@draft_round.errors.count, "error")} prohibited this draft_round from being saved:"
      %ul
        - @draft_round.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :round_number
    = f.number_field :round_number
  .field
    = f.label :draft_id
    = f.number_field :draft_id
  .field
    = f.label :pick_count
    = f.number_field :pick_count
  .actions
    = f.submit 'Save'
